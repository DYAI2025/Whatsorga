# Beziehungs-Radar Environment Configuration

# Domain (used by Caddy for auto-TLS)
RADAR_DOMAIN=radar.your-domain.de

# API Auth
RADAR_API_KEY=changeme-generate-a-random-token

# PostgreSQL (used by docker-compose directly)
POSTGRES_DB=radar
POSTGRES_USER=radar
POSTGRES_PASSWORD=changeme-strong-password

# radar-api settings (RADAR_ prefix maps to app/config.py)
RADAR_DATABASE_URL=postgresql+asyncpg://radar:changeme-strong-password@postgres:5432/radar
RADAR_DATABASE_URL_SYNC=postgresql+psycopg2://radar:changeme-strong-password@postgres:5432/radar

# ChromaDB
RADAR_CHROMADB_URL=http://chromadb:8000

# Ollama
RADAR_OLLAMA_URL=http://ollama:11434
RADAR_OLLAMA_MODEL=llama3.1:8b

# Groq (free tier - whisper-large-v3-turbo)
RADAR_GROQ_API_KEY=gsk_your_groq_api_key_here
RADAR_GROQ_WHISPER_MODEL=whisper-large-v3-turbo

# CalDAV (Apple iCloud) — for syncing extracted appointments
RADAR_CALDAV_URL=https://caldav.icloud.com
RADAR_CALDAV_USERNAME=your_apple_id@icloud.com
RADAR_CALDAV_PASSWORD=your_app_specific_password
RADAR_CALDAV_CALENDAR=Beziehungs-Radar

# ─── EverMemOS Semantic Memory ─────────────────────────────────────────
# Context memory that enables pronoun resolution, fact tracking,
# and intelligent appointment extraction.
RADAR_EVERMEMOS_URL=http://evermemos:8001
RADAR_EVERMEMOS_ENABLED=true

# EverMemOS LLM — reuses Groq key by default
EVERMEMOS_LLM_MODEL=meta-llama/llama-3.3-70b-instruct
EVERMEMOS_LLM_BASE_URL=https://api.groq.com/openai/v1

# EverMemOS Embeddings — DeepInfra (required for semantic search)
EVERMEMOS_DEEPINFRA_KEY=your_deepinfra_api_key_here
